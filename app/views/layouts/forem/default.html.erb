<!DOCTYPE html>
<html>
  <head>
    <title>MakeTime Forum</title>
    <%= stylesheet_link_tag    "forem-bootstrap", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "forem", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <%= forem_atom_auto_discovery_link_tag %>
  </head>
  <body>
    <div class="container">

    <div id='forums_container'>
      <%= search_form_for @search || Forem::Post.ransack, url: posts_search_forums_path do |form| %>
        <div>
          <%= form.label :text_cont, "Search Posts:" %>
          <%= form.search_field :text_cont %>

          <%= form.submit "Search" %>
        </div>
      <% end %>
    </div>

    <% flash.each do |k,v| %>
      <div class='flash <%= k %>'><%= v %></div>
    <% end %>
    <%= yield %>

    </div>
  </body>
</html>
